<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="model">
	<class name="Questions" table="questions">
		<id name="question_id" column="question_id" type="int">
			<generator class="increment"></generator>
		</id>
		
		<property name="user_id" column="user_id" type="string" insert="true" update="false"></property>
		<property name="question_content" column="question_content" type="string"></property>
		<property name="question_time" column="question_time" type="timestamp"></property>
		<property name="question_tag1" column="question_tag1" type="string"></property>
		<property name="question_tag2" column="question_tag2" type="string"></property>
		<property name="question_tag3" column="question_tag3" type="string"></property>
		<property name="question_title" column="question_title" type="string"></property>
		<property name="question_answer_num" column="question_answer_num" type="int"></property>
	</class>
</hibernate-mapping>