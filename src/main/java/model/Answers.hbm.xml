<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="model">
	<class name="Answers" table="answers">
		<id name="answer_id" column="answer_id" type="int">
			<generator class="increment"></generator>
		</id>
		
		<property name="question_id" column="question_id" type="int"></property>
		<property name="user_id" column="user_id" type="string" insert="true" update="false"></property>
		<property name="answer_content" column="answer_content" type="string"></property>
		<property name="answer_time" column="answer_time" type="timestamp"></property>
	</class>
</hibernate-mapping>