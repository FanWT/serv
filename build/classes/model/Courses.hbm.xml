<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="model">
	<class name="Courses" table="courses">
		<id name="course_id" column="course_id" type="string">
		</id>
		
		<property name="course_name" column="course_name" type="string"></property>
		<property name="course_rate" column="course_rate" type="double"></property>
		<property name="course_comment_num" column="course_comment_num" type="int"></property>
		<property name="course_credit" column="course_credit" type="double"></property>
		<property name="course_dept" column="course_dept" type="string"></property>
	</class>
</hibernate-mapping>