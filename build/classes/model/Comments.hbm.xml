<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="model">
	<class name="Comments" table="comments">
		<id name="comment_id" column="comment_id" type="int">
			<generator class="increment"></generator>
		</id>
		
		<property name="course_id" column="course_id" type="string" insert="true" update="false"></property>
		<property name="user_id" column="user_id" type="string" insert="true" update="false"></property>
		<property name="comment_content" column="comment_content" type="string"></property>
		<property name="comment_state" column="comment_state" type="int"></property>
		<property name="comment_date" column="comment_date" type="timestamp"></property>
		<property name="comment_rate" column="comment_rate" type="double"></property>
	</class>
</hibernate-mapping>