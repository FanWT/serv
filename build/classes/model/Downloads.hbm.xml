<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="model">
	<class name="Downloads" table="downloads">
		<id name="download_id" column="download_id" type="int">
			<generator class="increment"></generator>
		</id>
		
		<property name="user_id" column="user_id" type="string" insert="true" update="false"></property>
		<property name="course_id" column="course_id" type="string" insert="true" update="false"></property>
		<property name="download_url" column="download_url" type="string"></property>
		<property name="download_name" column="download_name" type="string"></property>
		<property name="download_time" column="download_time" type="timestamp"></property>
		<property name="download_num" column="download_num" type="int"></property>
		<property name="download_type" column="download_type" type="string"></property>
		<property name="download_size" column="download_size" type="int"></property>
	</class>
</hibernate-mapping>